# Application
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
APP_SECRET=your-secret-key

# Database
DATABASE_URL=postgresql://localhost:5432/licensechain_seller

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=http://localhost:3000,https://licensechain.app

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@licensechain.app

# LicenseChain API
LICENSE_CHAIN_API_URL=https://api.licensechain.app
LICENSE_CHAIN_API_KEY=your-api-key

# Webhooks
WEBHOOK_SECRET=your-webhook-secret

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=GA-XXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
